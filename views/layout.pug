    link(rel='stylesheet', href='/css/head.css')
    link(rel='stylesheet', href='/css/base.css')
  body
    div(class='container-fluid')
      nav.navbar.navbar-light
        .container
          button.btn.btn-primary(type='button' data-bs-toggle='offcanvas' data-bs-target='#menuOffCanvas' aria-controls='menuOffCanvas') Menu
      #menuOffCanvas.offcanvas.offcanvas-start(tabindex='-1' aria-labelledby='menuOffCanvasLabel')
        .offcanvas-header
          h5#menuOffCanvasLabel.offcanvas-title Menu
          button.btn-close.text-reset(type='button' data-bs-dismiss='offcanvas' aria-label='Close')
        .offcanvas-body
          block sidebar
              ul(class='sidebar-nav list-group')
                li.list-group-item 
                  a(href='/') Home
                li.list-group-item 
                  a(href='/books') All books
                li.list-group-item 
                  a(href='/authors') All authors
                li.list-group-item 
                  a(href='/genres') All genres
                li.list-group-item 
                  a(href='/book-instances') All book-instances
                li.list-group-item 
                  hr
                li.list-group-item 
                  a(href='/authors/create') Create new author
                li.list-group-item 
                  a(href='/genres/create') Create new genre
                li.list-group-item 
                  a(href='/books/create') Create new book
                li.list-group-item 
                  a(href='/book-instances/create') Create new book instance (copy)
                li.list-group-item
                  a(href='/auth/logout' class="btn btn-danger w-100") Logout
      hr.mt-0
      .container.w-100
        block content
